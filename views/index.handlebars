<h1>A League of Extraordinary Burgers</h1>

<div id="burger-display">

  <div id="not-eaten">
    <h2>Burgers seducing you to the dark side</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Ravage and devour</button>
            </form>

            
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <img id="pic" src="https://cdn.pixabay.com/photo/2014/10/23/18/05/burger-500054__340.jpg">  
  <div id="eaten">
    <h2>Burgers that fill you with regret</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">Un Eat?</button>
            </form>
            
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="add-burger">
  <div id="input">
    <h2>Add a burger:</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button id="add-burger-button" type="submit">Add Burger</button>
    </form>
  </div>
</div>
